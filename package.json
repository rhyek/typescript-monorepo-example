{
  "name": "typescript-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel --filter ./src/ dev",
    "lint": "pnpm run --parallel --filter ./src/ lint",
    "test:unit": "pnpm run --parallel --filter ./src/ test:unit",
    "test:e2e": "pnpm run --parallel --filter ./src/ test:e2e",
    "build": "pnpm run --parallel --filter ./src/ build",
    "clean:builds": "tsc -b --clean",
    "clean:node_modules": "rm -rf ./node_modules src/lib/node_modules src/web-api/node_modules"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.28",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "js-yaml": "^4.0.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "4.2.0-dev.20210208"
  }
}
