{
  "name": "typescript-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm exec --parallel --filter \"{apps}^...\" -- pnpx ttsc -b tsconfig.build.json && pnpm run dev --parallel --filter {apps}",
    "lint": "pnpm run lint --parallel --filter {apps} --filter {shared}",
    "test:unit": "pnpm run test:unit --parallel --filter {apps} --filter {shared}",
    "test:e2e": "pnpm run test:e2e --parallel --filter {apps}"
  },
  "devDependencies": {
    "@pnpm/filter-workspace-packages": "^2.3.10",
    "@pnpm/find-workspace-packages": "^2.3.38",
    "@pnpm/lockfile-file": "^3.2.0",
    "@pnpm/logger": "^3.2.3",
    "@pnpm/prune-lockfile": "^2.0.19",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.28",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "execa": "^5.0.0",
    "find-up": "^5.0.0",
    "husky": "^4.3.8",
    "js-yaml": "^4.0.0",
    "prettier": "^2.2.1",
    "tempy": "^1.0.0",
    "ts-node": "^9.1.1",
    "typescript": "4.2.0-dev.20210208",
    "yargs": "^16.2.0"
  }
}
